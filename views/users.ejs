<!DOCTYPE html>
<html lang="en">

<head>
    <title> Users </title>
    <!-- my css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    <div class="container-fluid justify-content-center align-items-center" id="wrapper">
        <!-- header  -->
        <div class="row ">
            <div class="header align-items-center">
                <div class="header-img">
                    <img src="images/logo.jpg" alt="logo" heignt="130px" width="130px">
                </div>

                <div class="header-text">
                    <a class="btn" id="home-btn" href="/">Home</a>
                </div>
                <div class="header-title">
                    <h1>Secure Application Project</h1>
                </div>
                <div class="header-text">
                    <a class="btn" id="update-btn" href="/users">View Users</a>
                    <a class="btn title-btn" id="title-btn" href="/user/signup">Signup</a>
                    <a class="btn title-btn" id="title-btn" href="/user/login">Login</a>
                    <a class="btn" id="update-btn" href="/user/logout">Logout</a>
                </div>
            </div>

        </div>

        <!-- main content -->
        <div class="container content">
            <div class="row">

                <div class="row">
                    <div class="container main-content-title">
                        <div class="col title-col">
                            <h2>List of Users in the System</h2>
                        </div>
                        <div class="col title-col">
                            <a class="btn title-btn" id="title-btn" href="/review/create">Add Review</a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="card-deck">
                        <% for (const user of users) { %>
                            <div class="card" id="card">
                                <div class="card-body">
                                    <div>
                                        <p>Username: <%= user.username %> </p>
                                    </div>
                                    <div>
                                        <p>Role: <%= user.role %>
                                        </p>
                                        <p>Token: <%= user.access_token %>
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <% } %>
                    </div>
                </div>
            </div>

        </div>

</body>

</html>