<!DOCTYPE html>
<html lang="en">

<head>
    <title> Signup </title>
    <!-- my css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    <div class="container-fluid justify-content-center align-items-center" id="form-wrapper">
        <!-- header  -->
        <div class="row ">
            <div class="header align-items-center">
                <div class="header-img">
                    <img src="/images/logo.jpg" alt="logo" heignt="130px" width="130px">
                </div>

                <div class="header-text">
                    <a class="btn" id="home-btn" href="/">Home</a>
                </div>
                <div class="header-title">
                    <h1>Secure Application Project</h1>
                </div>
            </div>

        </div>

        <!-- main content -->
        <div class="container form-content">
            <div class="row" id="form">

                <div class="row">
                    <div class="container main-content-title">
                        <div class="col title-col">
                            <h2>Signup</h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <form action="/user/signup" method="post">
                        <div class="mb-3">
                            <label for="inputUsername">Username:</label>
                            <input autofocus type="text" class="form-control shadow-none mb-3" id="inputUsername" name="Username">
                            <% if (errors.Username) { %>
                                <div class="text-danger mb-3"><%= errors.Username.msg %></div>
                            <% } %>
                            <label for="inputPassword">Password:</label>
                            <input autofocus type="text" class="form-control shadow-none mb-3" id="inputPassword" name="Password">
                            <% if (errors.Password) { %>
                                <div class="text-danger mb-3"><%= errors.Password.msg %></div>
                            <% } %>
                            <label for="inputRole">Role (user / admin):</label>
                            <input autofocus type="text" class="form-control shadow-none mb-3" id="inputRole" name="Role">
                            <% if (errors.Role) { %>
                            <div class="text-danger mb-3"><%= errors.Role.msg %></div>
                            <% } %>
                        </div>
                        <button type="submit" class="btn" id="add-btn">Signup</button>
                        <a class="btn" id="cancel-btn" href="/">Cancel</a>
                    </form>
                </div>
            </div>

        </div>

</body>

</html>