<body>


    <% let result = '' %>

    <% if (user) { %>
        <% result = `User ${user} was found.` %>
    <% } else { %>
        <% result = `No user with the name ${user} was not found.` %>
    <% } %>
    
    <%= result %>
    <div class="container-fluid justify-content-center align-items-center" id="error-wrapper">


        <div class="row">
            <% if (user) { %>
                <div class="message">
                    <h4> Hi <%= user.username %>! Your Account Details Are: </h4>
                    <p> Username: <%= user.username %> </p>
                    <p> Password: <%= user.password %> </p>
                    <p> Role: <%= user.role %> </p>
                </div>
                <% } %>
        </div>

        <br />

        </div>


    </div>

