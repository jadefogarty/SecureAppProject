<!DOCTYPE html>
<html lang="en">

<head>
    <title> Secure Application Project </title>
    <!-- my css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="/js/script.js"></script>

</head>

<body>

    <div class="container-fluid justify-content-center align-items-center" id="wrapper">
        <!-- header  -->
        <div class="row ">
            <div class="header align-items-center">
                <div class="header-img">
                    <img src="images/logo.jpg" alt="logo" heignt="130px" width="130px">
                </div>

                <div class="header-text">
                    <a class="btn" id="home-btn" href="/">Home</a>
                </div>
                <div class="header-title">
                    <h1>Secure Application Project</h1>
                </div>
                <div class="header-text">
                    <a class="btn" id="view-users-btn" href="/users">View Users</a>
                    <a class="btn" id="signup-btn" href="/user/signup">Signup</a>
                    <a class="btn" id="login-btn" href="/user/login">Login</a>
                    <a class="btn" id="logout-btn" href="/user/logout">Logout</a>
                </div>
            </div>

        </div>

        <!-- main content -->
        <div class="container content">
            <div class="row">

                <div class="row">
                    <div class="container main-content-title">
                        <div class="col title-col">
                            <h2>Book Reviews</h2>
                        </div>
                        <div class="col title-col">
                            <a class="btn title-btn" id="title-btn" href="/review/create">Add Review</a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="card-deck">
                        <% for (const review of reviews) { %>
                            <div class="card" id="card">
                                <div class="card-body">
                                    <div>
                                        <p>Review #<%= review.review_id %>
                                        </p>
                                    </div>
                                    <div>
                                        <p>Book Title: <%= review.book_title %>
                                        </p>
                                        <p>Book Author: <%= review.book_author %>
                                        </p>
                                        <p>Rating: <%= review.rating %>
                                        </p>
                                        <p>Comment(s): <%= review.comments %>
                                        </p>
                                    </div>
                                    <div>
                                        <a class="btn update-btn" id="update-btn"
                                            href="/review/update/<%= review.review_id %>">Update</a>
                                        <a class="btn delete-btn" id="delete-btn"
                                            href="/review/delete/<%= review.review_id %>">Delete</a>
                                    </div>

                                </div>

                            </div>
                            <% } %>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>

</html>